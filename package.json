{
  "name": "emp_pro",
  "version": "2.0.0",
  "type": "module",
  "description": "Employee dashboard with MERN STACK   ",
  "main": "server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node backend/server.js",
    "prepare": "husky install",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cross-env NODE_ENV=test jest backend/ --coverage",
    "test:frontend": "cross-env NODE_ENV=test jest frontend/ --coverage",
    "lint:frontend": "eslint frontend/src --config eslint.config.js",
    "lint:backend": "eslint backend/ --config eslint.config.js",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "format": "prettier --write frontend/src",
    "build": "echo 'No build step needed for backend'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "lint-staged": {
    "frontend/src/**/*.{js,jsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "backend/**/*.js": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ]
  },
  "author": "Pavithra",
  "license": "MIT",
  "dependencies": {
    "express": "5.1.0"
  },
  "devDependencies": {
    "@babel/core": "7.24.0",
    "@babel/preset-env": "7.24.0",
    "@babel/preset-react": "7.27.1",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "ajv": "8.17.1",
    "babel-jest": "29.7.0",
    "cross-env": "10.0.0",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jest-junit": "16.0.0",
    "lint-staged": "16.1.6",
    "prettier": "3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "supertest": "7.1.4",
    "typescript": "5.9.3"
  }
}
